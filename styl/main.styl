.btn
  background yellow
  transition background 2s
  &:hover
    background green
  &:active
    background brown

.block
  background gray
  height 50px
  width 200px
  transform translateX(-80%);
  transition .5s
  &:hover
    transform translateX(0)


.road
  margin-top 30px
  position relative
  width 100%
  height 30px
  background gray
  &:after
    position absolute
    content ''
    top 13px
    width 100%
    border-top 2px dashed white
    display block
.car
  position absolute
  bottom 15px
  width 60px
  height 30px
  background blue
  border-left 2px solid red
  border-right: 1px solid yellow
  z-index 1
  animation-name move
  animation-duration: 15s
  animation-delay: 2s
  animation-timing-function: linear
  animation-fill-mode: forwards
  &:hover
    animation-play-state: paused
    &:after
    &:before
      animation-play-state: paused
  &:after
  &:before
    position absolute
    width 20px
    height 20px
    border-radius 50%
    content ''
    display inline-block
    background linear-gradient(to top, black, gray)
    z-index 1
    bottom -10px
    animation-name: spin
    animation-delay: 2s
    animation-iteration-count: 15
    animation-duration: 1s
    animation-timing-function: linear
  &:after
    left 5px
  &:before
    right 5px

@keyframes spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)
@keyframes move
  0%
    left 0
  33%
    left 50%
  66%
    left 100%
  100%
    left 50%
